@model YESS.Models.CreateMedicineViewModel

@{
    ViewBag.Title = "Delete1";
    Layout = "~/Views/YESS_Layout.cshtml";
}

<section class="breadcrumb_part breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item" style="text-align:right">

                        <h2> מחיקת תמונה לתרופה </h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="text-align:right" dir="rtl">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.medicine.PRODUCTNDC, htmlAttributes: new { @class = "control-label col-md-2" })
            <div>
                @Html.DropDownListFor(model => model.medicine.PRODUCTNDC, new SelectList(Model.ndcs, Model.medicine.PRODUCTNDC), htmlAttributes: new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="button button-contactForm btn_1">מחיקת תמונה </button>



                <input type="reset" class="button button-contactForm btn_1">
            </div>
        </div>
    </div>
    
 }

<div style="text-align:right" dir="rtl">
    &nbsp;&nbsp;&nbsp;
    <a href='@Url.Action("Index", "Home")' class="button button-contactForm btn_1">חזרה לעמוד הראשי</a>
</div>