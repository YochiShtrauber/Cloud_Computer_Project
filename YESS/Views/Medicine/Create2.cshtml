@{
    ViewBag.Title = "Create2";
    Layout = "~/Views/YESS_Layout.cshtml";
}

<section class="breadcrumb_part breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item" style="text-align:right">

                        <h2> הוספת תמונה לתרופה </h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@using (Html.BeginForm("Create2", "Medicine", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h2 style="text-align:center">@ViewBag.succeessOrNot</h2>
    @Html.AntiForgeryToken()
<div>
    @if (RouteConfig.helper2 == 1)
    {
        <div class="form-horizontal" style="text-align:right" dir="rtl">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <p>
                <img src="@ViewBag.filePath" />
            </p>
           
          


        <div class="form-group">
                    <div class="col-md-10 control-label col-md-2 ">
                        <input required type="file" name="file" id="file" accept=".JPEG,.JPG,.png" />
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="button button-contactForm btn_1">הוספת תמונה לתרופה</button>
                        <input type="reset" class="button button-contactForm btn_1">
                    </div>
                </div>
            </div>
    }
</div>
    }

@if (RouteConfig.helper2 == 0)
{
    <div style="text-align:right" dir="rtl">
        &nbsp;&nbsp;&nbsp;
        <a href='@Url.Action("Edit1", "Medicine")' class="button button-contactForm btn_1">הוספת תמונה פעם נוספת</a>

    </div>
}
<div style="text-align:right" dir="rtl">
    &nbsp;&nbsp;&nbsp;
    <a href='@Url.Action("Index", "Home")' class="button button-contactForm btn_1">חזרה לעמוד הראשי</a>

</div>